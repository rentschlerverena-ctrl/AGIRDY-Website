---
/* src/components/Footer.astro */
const { lang = 'en' } = Astro.props;
const currentYear = new Date().getFullYear();
const homePath = lang === 'en' ? '/' : '/de';
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-main-content">
      <div class="footer-left">
        <a href={homePath} class="logo-brand-wrapper">
          <img src="/Logo_weiss.png" alt="AGIRDY Logo" class="footer-logo" />
          <span class="brand-text">AGIRDY<span class="dot">.</span></span>
        </a>
   
        <p class="footer-special-line">
          {lang === 'en' ? 'Are you AGIRDY? - Prepare the world for AGI.' : 'Bist du AGIRDY? - Mach die Welt bereit für AGI.'}
        </p>
      </div>

      <div class="footer-right">
        <nav class="nav-grid">
          <div class="nav-group">
            <a href={`${homePath}#who-we-are`}>{lang === 'en' ? 'WHO WE ARE' : 'WER WIR SIND'}</a>
            <a href={`${homePath}#what-we-do`}>{lang === 'en' ? 'WHAT WE DO' : 'WAS WIR TUN'}</a>
          </div>
          <div class="nav-group">
            <a href={`${homePath}#vision`}>{lang === 'en' ? 'VISION & MISSION' : 'VISION & MISSION'}</a>
            <a href={`${homePath}#roadmap`}>ROADMAP</a>
          </div>
        </nav>
      </div>
    </div>

    <div class="footer-line"></div>

    <div class="footer-bottom-bar">
      <div class="legal-info">
        <span class="copy">&copy; {currentYear} AGIRDY.</span>
        <div class="legal-links">
            <a href={lang === 'en' ? '/imprint' : '/impressum'}>
                {lang === 'en' ? 'IMPRINT' : 'IMPRESSUM'}
            </a>
            <a href={lang === 'en' ? '/privacy' : '/datenschutz'}>
                {lang === 'en' ? 'PRIVACY POLICY' : 'DATENSCHUTZ'}
            </a>
        </div>
      </div>
      <a href="#home" class="scroll-top">
        <span>{lang === 'en' ? 'BACK TO TOP' : 'NACH OBEN'}</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m18 15-6-6-6 6"/></svg>
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    z-index: 50; 
    width: 100%;
    margin-top: 80px;
    background-color: rgba(10, 15, 20, 0.95);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding: 70px 0 30px;
    color: #ffffff;
  }
  .footer-container { max-width: 1400px; margin: 0 auto; padding: 0 5%; }
  .footer-main-content { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 50px; }
  .logo-brand-wrapper { display: flex; align-items: center; gap: 15px; text-decoration: none; margin-bottom: 1.2rem; }
  .footer-logo { height: 30px; width: auto; }
  .brand-text { font-family: 'Archivo Black', sans-serif; font-size: 1.4rem; color: #ffffff; line-height: 1; }
  .dot { color: #adff2f; }
  .footer-left { max-width: 450px; }
  .footer-slogan { font-family: 'Lato', sans-serif; font-size: 0.8rem; color: rgba(255, 255, 255, 0.4); margin-bottom: 8px; }

  /* UPDATE: Slogan jetzt dezent weiß statt grün */
  .footer-special-line { 
    font-family: 'Lato', sans-serif; 
    font-weight: 700; 
    font-size: 0.85rem; 
    color: rgba(255, 255, 255, 0.8); /* Ein leicht transparentes Weiß */
    letter-spacing: 0.5px;
  }

  .nav-grid { display: flex; gap: 80px; }
  .nav-group { display: flex; flex-direction: column; gap: 0.8rem; }
  .nav-group a { text-decoration: none; color: white; font-family: 'Lato', sans-serif; font-weight: 700; font-size: 0.75rem; letter-spacing: 1.2px; text-transform: uppercase; opacity: 0.4; transition: 0.3s; }
  .nav-group a:hover { opacity: 1; color: #adff2f; transform: translateX(3px); }
  .footer-line { width: 100%; height: 1px; background: linear-gradient(to right, rgba(255, 255, 255, 0.1), transparent); margin-bottom: 25px; }
  .footer-bottom-bar { display: flex; justify-content: space-between; align-items: center; }
  .legal-info { display: flex; align-items: center; gap: 40px; }
  .copy, .legal-links a { font-family: 'Lato', sans-serif; font-size: 0.7rem; color: rgba(255, 255, 255, 0.3); text-transform: uppercase; text-decoration: none; }
  .legal-links { display: flex; gap: 20px; }
  .legal-links a:hover { color: #ffffff; }
  .scroll-top { display: flex; align-items: center; gap: 6px; text-decoration: none; color: #adff2f; font-family: 'Lato', sans-serif; font-weight: 700; font-size: 0.7rem; opacity: 0.7; }
  @media (max-width: 850px) {
    .footer-main-content { flex-direction: column; gap: 2.5rem; }
    .footer-bottom-bar { flex-direction: column-reverse; gap: 1.5rem; align-items: flex-start; }
  }
</style>