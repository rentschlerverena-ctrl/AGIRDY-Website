---
/* src/components/Footer.astro */
const { lang = 'en' } = Astro.props;
const currentYear = new Date().getFullYear();
const homePath = lang === 'en' ? '/' : '/de';
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-main-content">
      <div class="footer-left">
        <a href={homePath} class="logo-brand-wrapper">
          <img src="/Logo_weiss.png" alt="AGIRDY Logo" class="footer-logo" />
          <span class="brand-text">AGIRDY<span class="dot">.</span></span>
        </a>
   
        <p class="footer-special-line">
          {lang === 'en' ? 'Are you AGIRDY? - Prepare the world for AGI.' : 'Bist du AGIRDY? - Mach die Welt bereit für AGI.'}
        </p>
      </div>

      <div class="footer-right">
        <nav class="nav-grid">
          <div class="nav-group">
            <a href={`${homePath}#who-we-are`}>{lang === 'en' ? 'WHO WE ARE' : 'WER WIR SIND'}</a>
            <a href={`${homePath}#what-we-do`}>{lang === 'en' ? 'WHAT WE DO' : 'WAS WIR TUN'}</a>
          </div>
          <div class="nav-group">
            <a href={`${homePath}#vision`}>{lang === 'en' ? 'VISION & MISSION' : 'VISION & MISSION'}</a>
            <a href={`${homePath}#product`}>{lang === 'en' ? 'PRODUCT' : 'PRODUKT'}</a>
          </div>
          <div class="nav-group">
             <a href={`${homePath}#roadmap`}>ROADMAP</a>
             <a href={`${homePath}#contact`}>{lang === 'en' ? 'CONTACT' : 'KONTAKT'}</a>
          </div>
        </nav>
      </div>
    </div>

    <div class="footer-line"></div>

    <div class="footer-bottom-bar">
      <div class="legal-info">
        <span class="copy">&copy; {currentYear} AGIRDY GMBH</span>
        <div class="legal-links">
          <a href={lang === 'en' ? '/imprint' : '/impressum'}>{lang === 'en' ? 'IMPRINT' : 'IMPRESSUM'}</a>
          <a href={lang === 'en' ? '/privacy' : '/datenschutz'}>{lang === 'en' ? 'PRIVACY' : 'DATENSCHUTZ'}</a>
        </div>
      </div>

      <a href="#" onclick="window.scrollTo({top: 0, behavior: 'smooth'}); return false;" class="back-to-top-btn">
        <span class="btn-text">{lang === 'en' ? 'BACK TO TOP' : 'NACH OBEN'}</span>
        <span class="arrow-up">↑</span>
      </a>
    </div>
  </div>
</footer>

<style>
  /* Schriftarten werden NICHT verändert, nur Struktur für Konsistenz */
  .footer {
    background-color: #0a0f14;
    padding: 80px 0 40px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    z-index: 50;
    width: 100%;
    box-sizing: border-box;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 5%;
    width: 100%;
    box-sizing: border-box;
  }

  .footer-main-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 60px;
  }

  .logo-brand-wrapper {
    display: flex;
    align-items: center;
    gap: 15px;
    text-decoration: none;
    margin-bottom: 20px;
  }

  .footer-logo {
    height: 40px;
    width: auto;
  }

  .brand-text {
    font-family: 'Archivo Black', sans-serif;
    font-size: 1.8rem;
    color: white;
    letter-spacing: 1px;
  }

  .dot {
    color: #adff2f;
  }

  .footer-special-line {
    font-family: 'Lato', sans-serif;
    font-weight: 700;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: 0.5px;
  }

  .nav-grid { 
    display: flex; 
    gap: 80px; 
  }

  .nav-group { 
    display: flex; 
    flex-direction: column; 
    gap: 0.8rem; 
  }

  .nav-group a { 
    text-decoration: none; 
    color: white; 
    font-family: 'Lato', sans-serif; 
    font-weight: 700; 
    font-size: 0.75rem; 
    letter-spacing: 1.2px; 
    text-transform: uppercase; 
    opacity: 0.4; 
    transition: 0.3s; 
  }

  .nav-group a:hover { 
    opacity: 1; 
    color: #adff2f; 
    transform: translateX(3px); 
  }

  .footer-line { 
    width: 100%; 
    height: 1px; 
    background: linear-gradient(to right, rgba(255, 255, 255, 0.1), transparent); 
    margin-bottom: 25px; 
  }

  .footer-bottom-bar { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
  }

  .legal-info { 
    display: flex; 
    align-items: center; 
    gap: 40px; 
  }

  .copy, .legal-links a { 
    font-family: 'Lato', sans-serif; 
    font-size: 0.7rem; 
    color: rgba(255, 255, 255, 0.3); 
    text-decoration: none; 
    letter-spacing: 1px; 
  }

  .legal-links { 
    display: flex; 
    gap: 20px; 
  }

  .legal-links a:hover { 
    color: white; 
  }

  .back-to-top-btn { 
    display: flex; 
    align-items: center; 
    gap: 10px; 
    text-decoration: none; 
    color: #adff2f; 
    font-family: 'Bebas Neue', sans-serif; 
    font-size: 1.1rem; 
    letter-spacing: 1px; 
    transition: 0.3s; 
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
  }

  .back-to-top-btn:hover { 
    transform: translateY(-3px); 
    text-shadow: 0 0 10px rgba(173, 255, 47, 0.5); 
  }

  @media (max-width: 768px) {
    .footer-main-content { flex-direction: column; gap: 40px; }
    .nav-grid { gap: 40px; flex-wrap: wrap; }
    .footer-bottom-bar { flex-direction: column-reverse; gap: 30px; align-items: flex-start; }
  }
</style>