---
/* src/components/WhatWeDo.astro */

// 1. WICHTIG: Den alten Import (import whatwedoData from ...) LÖSCHEN!
// 2. Stattdessen die Daten über die Props empfangen:
const { whatwedoData } = Astro.props; 

// Kleiner Sicherheits-Check für das Terminal
if (!whatwedoData) {
  console.error("WhatWeDo: Keine Daten empfangen! Prüfe den Import in index.astro");
}
---

<section class="what-we-do" id="what-we-do">
  <div class="container">
    
<div class="title-row">
  <h2 class="section-title">{whatwedoData.title}</h2>
  <p class="section-title-sub">{whatwedoData.subtitle}</p>
</div>

    <div class="services-grid">
      {whatwedoData.items.map(item => (
        <div class="service-card">
          <div class="service-number">{item.step}</div>
          
          <div class="card-header">
            <h3 class="service-title">{item.title}</h3>
            {/* Wichtig: Klammern für den Bindestrich im JSON-Key */}
            <p class="service-item-sub">{item['title-sub']}</p>
          </div>

          <p class="service-desc" set:html={item.desc} />
          
          <div class="accent-bar"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* 1. SEKTIONS-GRUNDLAGEN */
  .what-we-do {
    position: relative;
    z-index: 20; 
    padding: 120px 0;
    background: transparent;
    width: 100%;
    overflow: hidden; /* Verhindert seitliches Scrollen */
  }

  .container {
    max-width: 100%;
    position: relative;
    z-index: 25;
  }

  /* 2. TITEL-STYLING (15% Einrückung wie Who We Are) */
  .title-row {
    width: 100%;
    padding-left: 15%;
    margin-bottom: 5rem;
  }

  .section-title {
    font-family: 'Archivo Black', sans-serif;
    letter-spacing: 1px;
    font-size: 3rem;
    color: var(--text);
    text-transform: uppercase;
    margin: 0;
    line-height: 1;
  }

.section-title-sub {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 1.5rem;
  letter-spacing: 1px;
  color: var(--accent);
  text-transform: uppercase;
  margin-top: 0.5rem;
  opacity: 0.9;
  /* NEU: Begrenzung für längere Texte */
  max-width: 600px; 
  line-height: 1.3;
}

  /* 3. KARTEN-LAYOUT (NEBENEINANDER) */
  .services-grid {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap; /* Verhindert Umbruch auf Desktop */
    justify-content: center;
    align-items: stretch; /* Macht alle Karten gleich hoch */
    gap: 2.5rem;
    padding: 0 10%;
    max-width: 1600px;
    margin: 0 auto;
  }

  /* 4. DIE EINZELNE KARTE */
  .service-card {
    position: relative;
    flex: 1; /* Jede Karte kriegt gleichen Platz */
    min-width: 300px; /* Mindestbreite pro Karte */
    background: rgba(17, 24, 31, 0.6);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 3.5rem 2.5rem;
    border-radius: 30px;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-10px);
    border-color: var(--accent);
    background: rgba(17, 24, 31, 0.85);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  /* 5. KARTEN-DETAILS */
  .service-number {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.2rem;
    color: var(--accent);
    margin-bottom: 1.5rem;
    letter-spacing: 2px;
  }

  .card-header {
    margin-bottom: 1.5rem;
  }

  .service-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.8rem;
    color: var(--text);
    margin: 0;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    line-height: 0.9;
  }

  .service-item-sub {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.3rem; 
    letter-spacing: 1.5px;
    font-weight: 400;
    text-transform: uppercase;
    margin-top: 0rem;    /* Sicherstellen, dass kein Platz nach oben ist */
    margin-bottom: 0.1rem; /* Der Abstand ZUM Bio-Text bleibt gleich */
    color: var(--text);
    opacity: 1;
    line-height: 2;      /* Macht den Block kompakter */
    color: var(--accent);
  
  }

  .service-desc {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--muted);
    margin-top: auto; /* Schiebt Beschreibung nach unten */
  }

  .service-desc :global(strong) {
    color: var(--accent);
    font-weight: normal;
  }

  /* 6. AKZENT-LINIE AM BODEN */
  .accent-bar {
    position: absolute;
    bottom: 0;
    left: 2.5rem;
    width: 0;
    height: 3px;
    background: var(--accent);
    transition: width 0.4s ease;
  }

  .service-card:hover .accent-bar {
    width: calc(100% - 5rem);
  }

  /* RESPONSIVE: Auf Tablets und Handys untereinander */
  @media (max-width: 1024px) {
    .services-grid {
      flex-direction: column;
      align-items: center;
      padding: 0 5%;
    }
    .service-card {
      width: 100%;
      max-width: 500px;
      min-height: auto;
    }
    .title-row {
      padding-left: 10%;
    }
  }
</style>