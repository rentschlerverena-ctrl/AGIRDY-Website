---
/* src/components/WhatWeDo.astro */
const { whatwedoData } = Astro.props;

if (!whatwedoData) {
  console.error("WhatWeDo: Keine Daten empfangen!");
}
---

<section class="what-we-do" id="what-we-do">
  <div class="container">
    
    <div class="title-row">
      <h2 class="section-title">{whatwedoData.title}</h2>
      <p class="section-title-sub">{whatwedoData.subtitle}</p>
    </div>

    <div class="services-grid">
      {whatwedoData.items.map(item => (
        /* Nutzt die globale Klasse .card */
        <div class="card service-card">
          <div class="service-number">{item.step}</div>
          
          <div class="card-header">
            <h3 class="card-title">{item.title}</h3>
            <p class="card-subtitle">{item['title-sub']}</p>
          </div>

          <p class="card-desc" set:html={item.desc} />
          
          <div class="accent-bar"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .what-we-do {
    position: relative;
    z-index: 20; 
    padding: 120px 0;
    background: transparent;
    width: 100%;
    overflow: hidden;
  }

  .container {
    max-width: 100%;
    position: relative;
    z-index: 25;
  }

  /* Das Grid-Layout bleibt lokal, da es spezifisch für diese Sektion ist */
  .services-grid {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: stretch;
    gap: 2.5rem;
    padding: 0 10%;
    max-width: 1600px;
    margin: 0 auto;
  }

  .service-card {
    flex: 1;
    min-width: 300px;
    /* Die .card Styles kommen jetzt aus der global.css */
  }

  /* Spezifische Details für WhatWeDo */
  .service-number {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.2rem;
    color: var(--accent);
    margin-bottom: 1.5rem;
    letter-spacing: 2px;
  }

  /* Die Akzent-Linie am Boden bleibt als lokales Extra-Feature */
  .accent-bar {
    position: absolute;
    bottom: 0;
    left: 2.5rem;
    width: 0;
    height: 3px;
    background: var(--accent);
    transition: width 0.4s ease;
  }*/

  .service-card:hover .accent-bar {
    width: calc(100% - 5rem);
  }

  /* Responsive Anpassungen */
  @media (max-width: 1024px) {
    .services-grid {
      flex-direction: column;
      align-items: center;
      padding: 0 5%;
    }
    .service-card {
      width: 100%;
      max-width: 500px;
    }
  }
</style>