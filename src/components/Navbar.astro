---
/* src/components/Navbar.astro */
const { lang = 'en' } = Astro.props; 
const homePath = lang === 'en' ? '/' : '/de';
const targetPath = lang === 'en' ? '/de' : '/';
---

<nav class="navbar">
  <div class="nav-container">
    <div class="logo">
      <a href={homePath}>
        <img src="/Logo_weiss.png" alt="AGIRDY Logo" class="logo-img" />
      </a>
    </div>

    <ul class="nav-links" id="nav-menu">
      <li><a href={`${homePath}#who-we-are`}>{lang === 'en' ? 'WHO WE ARE' : 'WER WIR SIND'}</a></li>
      <li><a href={`${homePath}#what-we-do`}>{lang === 'en' ? 'WHAT WE DO' : 'WAS WIR TUN'}</a></li>
      <li><a href={`${homePath}#vision`}>{lang === 'en' ? 'VISION & MISSION' : 'VISION & MISSION'}</a></li>
      
      <li class="dropdown">
        <div class="dropdown-trigger-wrapper">
          <a href={`${homePath}#product`}>{lang === 'en' ? 'PRODUCT' : 'PRODUKT'}</a>
          <span class="chevron">▾</span>
        </div>
        <ul class="dropdown-menu">
          <li><a href={`${homePath}#roadmap`}>ROADMAP</a></li>
        </ul>
      </li>

      <li class="dropdown">
        <div class="dropdown-trigger-wrapper">
          <a href="#">{lang === 'en' ? 'NEWS' : 'AKTUELLES'}</a>
          <span class="chevron">▾</span>
        </div>
        <ul class="dropdown-menu">
          <li><a href={`${homePath}blog`}>BLOG</a></li>
          <li><a href={`${homePath}podcast`}>PODCAST</a></li>
        </ul>
      </li>

      <li>
        <a href={`${homePath}#contact`} class="nav-cta">
          {lang === 'en' ? 'CONTACT' : 'KONTAKT'}
        </a>
      </li>
      
      <li class="lang-switch-container">
        <a href={targetPath} class="lang-switch">
          {lang === 'en' ? 'DE' : 'EN'}
        </a>
      </li>
    </ul>

    <div class="menu-toggle" id="mobile-menu">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
  </div>
</nav>

<style>
  /* --- NAVBAR BASIS --- */
  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    background: rgba(10, 15, 20, 0.85);
    backdrop-filter: blur(15px);
    padding: 15px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 5%;
  }

  .logo-img { height: 35px; width: auto; }

  .nav-links {
    display: flex;
    list-style: none;
    align-items: center;
    gap: 20px;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    color: white;
    font-family: 'Lato', sans-serif;
    font-weight: 700;
    font-size: 0.75rem;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    transition: 0.3s ease;
    opacity: 0.7;
  }

  /* --- CTA & SPRACHSWITCH --- */
  .nav-cta {
    opacity: 1 !important;
    color: #adff2f !important;
    border: 1.5px solid #adff2f;
    padding: 10px 25px !important;
    border-radius: 50px;
    background: transparent;
  }

  .nav-cta:hover {
    background: #adff2f !important;
    color: #0a0f14 !important;
    box-shadow: 0 0 20px rgba(173, 255, 47, 0.4);
  }

  .lang-switch-container {
    margin-left: 10px;
    padding-left: 20px;
    border-left: 1px solid rgba(255, 255, 255, 0.15);
  }

  /* --- DESKTOP DROPDOWN --- */
  @media (min-width: 1025px) {
    .nav-links a:not(.nav-cta):hover { opacity: 1; color: #adff2f; }
    .dropdown { padding: 15px 0; margin: -15px 0; }
    .dropdown:hover .dropdown-menu { 
      opacity: 1; 
      visibility: visible; 
      transform: translateX(-50%) translateY(0); 
    }
    .dropdown:hover .chevron { transform: rotate(180deg); opacity: 1; }
  }

  .dropdown { position: relative; }
  .dropdown-trigger-wrapper { display: flex; align-items: center; gap: 5px; cursor: pointer; }
  .chevron { color: white; font-size: 0.7rem; transition: transform 0.3s; opacity: 0.7; }

  .dropdown-menu {
    position: absolute;
    top: 100%; 
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    background: #11181f;
    min-width: 180px;
    padding: 10px 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    list-style: none;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
  }

  .dropdown-menu a { padding: 12px 20px; display: block; font-size: 0.7rem; }

  /* --- MOBILE STYLES --- */
  .menu-toggle { display: none; flex-direction: column; gap: 6px; cursor: pointer; z-index: 1100; }
  .line { width: 28px; height: 2px; background: white; transition: 0.4s; }

  .menu-toggle.is-active .line:nth-child(1) { transform: translateY(8px) rotate(45deg); }
  .menu-toggle.is-active .line:nth-child(2) { opacity: 0; }
  .menu-toggle.is-active .line:nth-child(3) { transform: translateY(-8px) rotate(-45deg); }

  @media (max-width: 1024px) {
    .menu-toggle { display: flex; }
    .nav-links {
      position: fixed;
      right: -100%;
      top: 0;
      width: 100%;
      height: 100vh;
      background: #0a0f14;
      flex-direction: column;
      padding-top: 100px;
      padding-bottom: 40px;
      transition: 0.5s cubic-bezier(0.77, 0.2, 0.05, 1.0);
      overflow-y: auto; /* Erlaubt Scrollen IM Menü, falls es zu lang ist */
    }
    .nav-links.active { right: 0; }
    .nav-links li { width: 100%; text-align: center; }
    .nav-links a { font-size: 1.5rem; display: block; padding: 15px; opacity: 1; }

    .nav-cta { border: 1px solid #adff2f !important; margin: 10px auto; width: fit-content; }
    .lang-switch-container { border: none; margin: 20px 0 0 0; padding: 0; }

    .dropdown-menu {
      position: static;
      transform: none;
      opacity: 1;
      visibility: visible;
      display: none;
      background: rgba(255, 255, 255, 0.05);
      width: 100%;
      border: none;
    }
    .dropdown.open .dropdown-menu { display: block; }
  }
</style>

<script>
  const menuToggle = document.getElementById('mobile-menu');
  const navMenu = document.getElementById('nav-menu');
  const dropdowns = document.querySelectorAll('.dropdown');
  const body = document.body;

  // Mobile Menu Toggle
  menuToggle.addEventListener('click', () => {
    menuToggle.classList.toggle('is-active');
    navMenu.classList.toggle('active');
    
    // FIX: Verhindert Scrollen auf der Hauptseite, wenn Menü offen ist
    if (navMenu.classList.contains('active')) {
      body.style.overflow = 'hidden';
    } else {
      body.style.overflow = '';
    }
  });

  // Mobile Dropdown Accordion
  dropdowns.forEach(dropdown => {
    const trigger = dropdown.querySelector('.dropdown-trigger-wrapper');
    trigger.addEventListener('click', () => {
      if (window.innerWidth <= 1024) {
        dropdown.classList.toggle('open');
      }
    });
  });

  // Schließt Menü bei Link-Klick und reaktiviert Scrolling
  document.querySelectorAll('.nav-links a').forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth <= 1024 && link.parentElement.classList.contains('dropdown-trigger-wrapper')) return;
      
      menuToggle.classList.remove('is-active');
      navMenu.classList.remove('active');
      body.style.overflow = ''; // Scrolling wieder erlauben
    });
  });
</script>