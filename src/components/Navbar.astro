---
/* src/components/Navbar.astro */
const { lang = 'en' } = Astro.props; 
const homePath = lang === 'en' ? '/' : '/de';
const targetPath = lang === 'en' ? '/de' : '/';
---

<nav class="navbar">
  <div class="nav-container">
    <div class="logo">
      <a href={homePath}>
        <img src="/Logo_weiss.png" alt="AGIRDY Logo" class="logo-img" />
      </a>
    </div>

    <ul class="nav-links" id="nav-menu">
      <li><a href={`${homePath}#who-we-are`}>{lang === 'en' ? 'WHO WE ARE' : 'WER WIR SIND'}</a></li>
      <li><a href={`${homePath}#what-we-do`}>{lang === 'en' ? 'WHAT WE DO' : 'WAS WIR TUN'}</a></li>
      <li><a href={`${homePath}#vision`}>{lang === 'en' ? 'VISION & MISSION' : 'VISION & MISSION'}</a></li>
      
      <li class="dropdown">
        <div class="dropdown-trigger-wrapper">
          <a href={`${homePath}#product`}>{lang === 'en' ? 'PRODUCT' : 'PRODUKT'}</a>
          <span class="chevron">▾</span>
        </div>
        <ul class="dropdown-menu">
          <li><a href={`${homePath}#roadmap`}>ROADMAP</a></li>
        </ul>
      </li>

      <li class="dropdown">
        <div class="dropdown-trigger-wrapper">
          <a href="#">{lang === 'en' ? 'NEWS' : 'AKTUELLES'}</a>
          <span class="chevron">▾</span>
        </div>
        <ul class="dropdown-menu">
          <li><a href={`${homePath}blog`}>BLOG</a></li>
          <li><a href={`${homePath}podcast`}>PODCAST</a></li>
        </ul>
      </li>

      <li>
        <a href={`${homePath}#contact`} class="nav-cta">
          {lang === 'en' ? 'CONTACT' : 'KONTAKT'}
        </a>
      </li>
      
      <li class="lang-switch-container">
        <a href={targetPath} class="lang-switch">
          {lang === 'en' ? 'DE' : 'EN'}
        </a>
      </li>
    </ul>

    <div class="menu-toggle" id="mobile-menu">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
  </div>
</nav>

<style>
  /* --- DESKTOP STYLES --- */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 2000;
    background: rgba(10, 15, 20, 0.85);
    backdrop-filter: blur(15px);
    padding: 15px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 5%;
  }

  .logo-img { height: 35px; width: auto; }

  .nav-links {
    display: flex;
    list-style: none;
    align-items: center;
    gap: 20px;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    color: white;
    font-family: 'Lato', sans-serif;
    font-weight: 700;
    font-size: 0.75rem;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    opacity: 0.7;
    transition: 0.3s;
  }

  .nav-cta {
    opacity: 1 !important;
    color: #adff2f !important;
    border: 1.5px solid #adff2f;
    padding: 10px 25px !important;
    border-radius: 50px;
  }

  /* --- DESKTOP DROPDOWN --- */
  @media (min-width: 1025px) {
    .nav-links a:not(.nav-cta):hover { opacity: 1; color: #adff2f; }
    .dropdown { position: relative; padding: 10px 0; }
    .dropdown:hover .dropdown-menu { opacity: 1; visibility: visible; transform: translateX(-50%) translateY(0); }
    .dropdown-menu {
      position: absolute;
      top: 100%; left: 50%;
      transform: translateX(-50%) translateY(10px);
      background: #11181f;
      min-width: 180px;
      padding: 10px 0;
      border-radius: 8px;
      opacity: 0; visibility: hidden;
      list-style: none;
      transition: 0.3s;
    }
    .dropdown-menu a { padding: 10px 20px; display: block; font-size: 0.7rem; }
  }

  .dropdown-trigger-wrapper { display: flex; align-items: center; gap: 5px; cursor: pointer; }
  .chevron { color: white; font-size: 0.7rem; transition: transform 0.3s; }

  /* --- MOBILE FULLSCREEN OVERLAY --- */
  .menu-toggle { display: none; flex-direction: column; gap: 6px; cursor: pointer; z-index: 2100; position: relative; }
  .line { width: 28px; height: 2px; background: white; transition: 0.4s; }

  /* X-Animation */
  .menu-toggle.is-active .line:nth-child(1) { transform: translateY(8px) rotate(45deg); }
  .menu-toggle.is-active .line:nth-child(2) { opacity: 0; }
  .menu-toggle.is-active .line:nth-child(3) { transform: translateY(-8px) rotate(-45deg); }

  @media (max-width: 1024px) {
    .menu-toggle { display: flex; }

    .nav-links {
      display: flex;
      flex-direction: column;
      justify-content: center; /* Vertikal mittig */
      align-items: center;    /* Horizontal mittig */
      
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh; /* Volle Höhe */
      height: 100dvh; /* Nutzt dynamischen Viewport (wichtig für mobile Browser) */
      
      background: #0a0f14; /* 100% Deckkraft, kein Durchscheinen */
      margin: 0;
      padding: 0;
      list-style: none;
      
      /* Verstecken */
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
      transition: opacity 0.4s ease, visibility 0.4s ease;
      z-index: 2050;
    }

    .nav-links.active {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }

    .nav-links li {
      width: 100%;
      margin: 10px 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .nav-links a {
      font-size: 1.6rem;
      opacity: 1;
      text-align: center;
      padding: 10px;
    }

    /* Mobile Dropdown Fix */
    .dropdown-trigger-wrapper {
      justify-content: center;
      width: 100%;
      gap: 10px;
    }
    .chevron { font-size: 1.2rem; }

    .dropdown-menu {
      display: none;
      width: 100%;
      background: rgba(255, 255, 255, 0.05);
      padding: 0;
      margin-top: 5px;
      list-style: none;
    }
    .dropdown.open .dropdown-menu { display: block; }
    .dropdown-menu a { font-size: 1.2rem; color: #adff2f; opacity: 0.8; }

    /* CTA & Sprachschalter */
    .nav-cta {
      margin-top: 15px;
      font-size: 1.4rem !important;
      border: 1.5px solid #adff2f !important;
    }
    .lang-switch-container {
      border: none;
      margin-top: 30px;
      padding: 0;
    }
  }
</style>

<script>
  const menuToggle = document.getElementById('mobile-menu');
  const navMenu = document.getElementById('nav-menu');
  const body = document.body;
  const html = document.documentElement;

  menuToggle.addEventListener('click', () => {
    const isActive = menuToggle.classList.toggle('is-active');
    navMenu.classList.toggle('active');
    
    if (isActive) {
      // Absoluter Scroll-Stopp für iOS und Android
      body.style.overflow = 'hidden';
      body.style.position = 'fixed';
      body.style.width = '100%';
      html.style.overflow = 'hidden';
    } else {
      body.style.overflow = '';
      body.style.position = '';
      body.style.width = '';
      html.style.overflow = '';
    }
  });

  // Mobile Dropdown
  document.querySelectorAll('.dropdown').forEach(dropdown => {
    dropdown.querySelector('.dropdown-trigger-wrapper').addEventListener('click', (e) => {
      if (window.innerWidth <= 1024) {
        e.preventDefault();
        dropdown.classList.toggle('open');
      }
    });
  });

  // Schließen bei Klick auf Link
  document.querySelectorAll('.nav-links a').forEach(link => {
    link.addEventListener('click', () => {
      // Nur schließen, wenn es kein Dropdown-Trigger ist
      if (window.innerWidth <= 1024 && !link.closest('.dropdown-trigger-wrapper')) {
        menuToggle.classList.remove('is-active');
        navMenu.classList.toggle('active');
        body.style.overflow = '';
        body.style.position = '';
        html.style.overflow = '';
      }
    });
  });
</script>