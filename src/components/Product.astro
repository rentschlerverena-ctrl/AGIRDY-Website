---
/* src/components/Product.astro */
const { productData } = Astro.props;

if (!productData) {
  console.error("Product: Keine Daten empfangen!");
}
---

<section class="what-we-do" id="product">
  <div class="container">
    
    <div class="title-row">
      <h2 class="section-title">{productData?.title || "AGIRDY CORE"}</h2>
      <p class="section-title-sub">{productData?.subtitle || "The Intelligence Infrastructure"}</p>
    </div>

    <div class="product-layout-master">
      
      <div class="product-image-frame">
        <div class="image-wrapper">
          <img src="/product-brain.jpg" alt="Agirdy Core Visual" class="main-img" />
          <div class="vignette-overlay"></div>
          <div class="image-glow"></div>
        </div>
      </div>

      <div class="product-cards-stack">
        {productData?.features?.map((item) => (
          <div class="feature-horizontal-card">
            <div class="feature-badge">{item.id}</div>
            
            <div class="card-inner-content">
              <div class="card-title-box">
                <h3 class="feature-card-title">{item.title}</h3>
              </div>
              
              <div class="card-divider"></div>
              
              <div class="card-desc-box">
                <p class="feature-card-desc">{item.desc}</p>
              </div>
            </div>

            <div class="accent-bar"></div>
          </div>
        ))}
      </div>

    </div>
  </div>
</section>

<style>
  /* --- BASIS STYLES --- */
  .what-we-do {
    position: relative;
    padding: 120px 0;
    background: transparent;
    width: 100%;
    overflow: hidden;
    z-index: 10; /* Basis-Ebene */
    scroll-margin-top: 100px;
  }

  .container {
    width: 100%;
    position: relative;
    z-index: 15;
  }

  /* FIX: Titel muss über allem liegen */
  .title-row {
    padding-left: 15%;
    margin-bottom: 4rem;
    position: relative;
    z-index: 100; /* Sicherstellen, dass Titel ganz oben ist */
  }

  .section-title {
    font-family: 'Archivo Black', sans-serif;
    font-size: 3rem;
    color: var(--text);
    text-transform: uppercase;
    line-height: 1;
    position: relative;
  }

  .section-title-sub {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    color: var(--accent);
    text-transform: uppercase;
    margin-top: 0.2rem;
    position: relative;
  }

  /* --- LAYOUT MASTER --- */
  .product-layout-master {
    position: relative;
    display: flex;
    justify-content: center; 
    align-items: center;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    min-height: 600px;
    z-index: 20; /* Liegt unter dem Titel-Bereich */
  }

  /* BILD EBENE */
  .product-image-frame {
    position: absolute;
    left: 0; 
    top: 0;
    bottom: 0;
    width: 55%; 
    z-index: 1;
    pointer-events: none;
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 40px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .main-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    object-position: 140%;
  }

  .vignette-overlay {
    position: absolute;
    inset: 0;
    /* Verstärkt nur nach Rechts hin zum Karten-Stack */
    background: linear-gradient(
      to left, 
      rgba(10, 15, 20, 1) 0%, 
      rgba(10, 15, 20, 0.8) 35%, 
      transparent 80%
    );
    z-index: 2;
  }

  .image-glow {
    position: absolute;
    top: 50%;
    left: 20%;
    width: 60%;
    height: 60%;
    background: var(--accent);
    filter: blur(120px);
    opacity: 0.15;
    z-index: -1;
  }

  /* KARTEN EBENE */
  .product-cards-stack {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 850px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-left: 35%; 
  }

  .feature-horizontal-card {
    position: relative;
    background: rgba(17, 24, 31, 0.7);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 40px;
    padding: 2.5rem 3.5rem;
    display: flex;
    align-items: center;
    transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    box-shadow: -30px 20px 60px rgba(0, 0, 0, 0.6);
  }

  .card-inner-content {
    display: grid;
    grid-template-columns: 0.7fr 1px 1.3fr;
    gap: 3rem;
    align-items: center;
    width: 100%;
  }

  .feature-badge {
    position: absolute;
    left: -25px;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    background: var(--accent); 
    color: #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    font-weight: bold;
    z-index: 11;
  }

  .feature-card-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.8rem;
    color: var(--text);
    text-transform: uppercase;
    margin: 0;
  }

  .card-divider {
    width: 1px;
    height: 60px;
    background: var(--accent); 
    opacity: 0.4;
  }

  .feature-card-desc {
    font-family: 'Lato', sans-serif;
    font-size: 1rem;
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
  }

  .accent-bar {
    position: absolute;
    bottom: 0;
    left: 40px;
    right: 40px;
    width: 0;
    height: 3px;
    background: var(--accent);
    transition: width 0.5s ease;
  }

  .feature-horizontal-card:hover {
    transform: scale(1.02);
    border-color: var(--accent);
  }

  /* RESPONSIVE */
  @media (max-width: 1100px) {
    .title-row { padding-left: 5%; }
    .product-layout-master {
      flex-direction: column;
      max-width: 100%;
      min-height: auto;
    }
    .product-image-frame {
      position: relative;
      width: 100%;
      height: 350px;
      margin-bottom: 2rem;
    }
.product-cards-stack {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 950px; /* <--- DIESER WERT bestimmt die Kartenlänge */
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-left: 0%; 
}
    .card-inner-content { grid-template-columns: 1fr; gap: 1rem; }
    .card-divider { display: none; }
    .feature-badge { left: 10px; top: -25px; transform: none; }
  }
</style>