---
/* src/pages/index.astro */
import "../styles/global.css";

// 1. Daten importieren
import teamData from '../data/en/team.json';
import whatwedoData from '../data/en/whatwedo.json';
import visionData from '../data/en/vision.json';
import productData from '../data/en/product.json';
import roadmapData from '../data/en/roadmap.json';
import contactData from '../data/en/contact.json';
import introData from '../data/en/intro.json';

// 2. Komponenten importieren
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import WhoWeAre from "../components/WhoWeAre.astro"; 
import WhatWeDoSection from '../components/WhatWeDo.astro';
import Vision from '../components/Vision.astro';
import Product from '../components/Product.astro';
import Roadmap from '../components/Roadmap.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import Intro from '../components/Intro.astro';

const lang = "en"; 
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AGIRDY | Artificial General Intelligence Ready</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Bebas+Neue&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <Navbar lang={lang} />

    <main>
      <Hero />

      <Intro introData={introData} />
      
      <WhoWeAre teamData={teamData} />
      
      <WhatWeDoSection whatwedoData={whatwedoData} />
      
      <Vision visionData={visionData} />
      
      <Product productData={productData} />
      
      <Roadmap roadmapData={roadmapData} />
      
      <Contact contactData={contactData} />
    </main>

    <Footer lang={lang} />
  </body>
</html>